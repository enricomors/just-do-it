<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/task_navigation"
    app:startDestination="@id/taskListFragment">

    <fragment
        android:id="@+id/taskListFragment"
        android:name="com.example.justdoit.view.TaskListFragment"
        android:label="Your Tasks"
        tools:layout="@layout/fragment_task_list">
        <action
            android:id="@+id/action_add_task"
            app:destination="@id/addTaskFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/action_filter_task"
            app:destination="@id/taskListFragment" />
        <argument
            android:name="filer_type"
            android:defaultValue="0"
            app:argType="integer" />
        <action
            android:id="@+id/action_statistics"
            app:destination="@+id/statisticsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/action_addClass"
            app:destination="@id/addClassFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/action_taskDetail"
            app:destination="@id/taskDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/addTaskFragment"
        android:name="com.example.justdoit.view.AddEditTaskFragment"
        android:label="Add/Edit Task"
        tools:layout="@layout/fragment_add_task">
        <action
            android:id="@+id/action_save_task"
            app:destination="@id/taskListFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <argument
            android:name="taskID"
            app:argType="long"
            android:defaultValue="0L" />
    </fragment>
    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.example.justdoit.view.StatisticsFragment"
        android:label="fragment_statistics"
        tools:layout="@layout/fragment_statistics" />
    <fragment
        android:id="@+id/addClassFragment"
        android:name="com.example.justdoit.view.AddClassFragment"
        android:label="fragment_add_class"
        tools:layout="@layout/fragment_add_class">
        <action
            android:id="@+id/action_classAdded"
            app:destination="@id/taskListFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/taskDetailFragment"
        android:name="com.example.justdoit.view.TaskDetailFragment"
        android:label="fragment_task_detail"
        tools:layout="@layout/fragment_task_detail" >
        <argument
            android:name="taskID"
            app:argType="long"
            android:defaultValue="0L" />
        <action
            android:id="@+id/action_editTask"
            app:destination="@id/addTaskFragment" />
    </fragment>
</navigation>